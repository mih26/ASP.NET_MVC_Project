<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        body {
            padding-top: 70px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-light bg-light navbar-expand-md fixed-top shadow-sm border-bottom">
        <div class="container-fluid">
            <span class="navbar-brand">EmployeeManagement</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">@Html.ActionLink("Employee", "Index", "Employee", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Skill", "Index", "Skill", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("MasterDetails", "Master", "Custom", new { }, new { @class = "nav-link" })</li>

                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid" style="min-height:calc(100vh - 110px)">
        @RenderBody()
    </main>
    <footer class="container-fluid">
        <p>@DateTime.Today.ToString("MMM dd, yyyy")</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>