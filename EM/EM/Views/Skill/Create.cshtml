@model EM.Models.Skill
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-12">
        <div id="placeholder"></div>
    </div>
    <div class="col-12">
        @using (Ajax.BeginForm("Create", "Skill",
            new AjaxOptions
            {
                HttpMethod = "POST",
                UpdateTargetId = "placeholder",
                InsertionMode = InsertionMode.Replace,
                OnSuccess = "onSuccess"
            }, new { id = "frm" }))
        {
            <div class="form-group row mb-1">
                <label class="col-form-label col-2">Employee</label>
                <div class="col-4">
                    @Html.DropDownListFor(x => x.EmployeeId, new SelectList(ViewBag.Employees, "EmployeeId", "EmployeeName"), "Select one", new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.EmployeeId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2">Course</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Degree, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Degree, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2">Institute</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Institute, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Institute, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2">Passing year</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.PassingYear, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.PassingYear, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2">Result</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Result, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Result, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>

        }
        <div class="col-12">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
  
</div>

@section scripts {
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        function onSuccess() {
            $("#frm").trigger('reset');
        }
    </script>
}


